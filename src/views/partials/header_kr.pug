header.header
    .header--wide
        .user--form
            if user
                ul
                    li
                        a(href=`/user${routes.user_page_kr}`) 회원정보
                    li
                        a(href=routes.logout_kr) 로그아웃
            else
                ul
                    li
                        a(href=routes.login_kr) 로그인
                    li
                        a(href=routes.signup_kr) 회원가입
            .user--language
                span
                    i.fas.fa-globe
                span 한국어
                span 
                    i.fas.fa-caret-down
                .language--list
                    ul
                        li
                            a(href="/") English
                        li
                            a(href="/kr") 한국어
                        li
                            a(href="/jp") 日本語
        .header__navi
            .header__logo
                a(href="/kr")
                    img(src="/img/logo.png")
            .navi__list
                ul
                    li
                        a(href=routes.companyKr) COMPANY
                    li
                        a(href="javascript:void(0);") ABOUT
                        ul
                            li
                                a(href=`/about${routes.fitness_kr}`) Fitness
                            li
                                a(href=`/about${routes.game_kr}`) Game
                            li
                                a(href=`/about${routes.character_kr}`) Character
                            li
                                a(href=`/about${routes.connection_kr}`) Connection
                    li
                        a(href="/notice/1/kr") NOTICE
    .header--narrow
        .header__logo--responsive#js--logoResponsive
            a(href="/kr")
                img(src="/img/logo_responsive.png")
            span.header__icon#js--openSide
                i.fas.fa-bars
        .header__navi--side#js--sideNavi
            .header__logo--side
                .side--navi__header
                    img(src="/img/logo_responsive.png")
                    span.header__icon#js--closeSide
                        i.fas.fa-times
                .side--navi__body
                    if user
                        ul.side-navi__userform
                            li
                                a(href=`/user${routes.user_page_kr}`) 회원정보
                            li
                                a(href=routes.logout_kr) 로그아웃
                    else
                        ul.side-navi__userform
                            li
                                a(href=routes.login_kr) 로그인
                            li
                                a(href=routes.signup_kr) 회원가입
                    ul.side--navi__collapsible.js--collapsible
                        li 한국어
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        a(href="/")
                            li
                                span English
                        a(href="/kr")
                            li
                                span 한국어
                        a(href="/jp")
                            li
                                span 日本語
                    ul.side--navi__content
                        a(href=routes.companyKr)
                            li
                                span COMPANY
                    ul.side--navi__collapsible.js--collapsible
                        li ABOUT
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        a(href=`/about${routes.fitness_kr}`)
                            li
                                span Fitness
                        a(href=`/about${routes.game_kr}`)
                            li
                                span Game
                        a(href=`/about${routes.character_kr}`)
                            li
                                span Character
                        a(href=`/about${routes.connection_kr}`)
                            li
                                span Connection
                    ul.side--navi__content
                        a(href="/notice/1/kr")
                            li
                                span NOTICE
