header.header
    .header--wide
        .user--form
            if user
                ul
                    li
                        a(href=`/user${routes.user_page_jp}`) プロフィール
                    li
                        a(href=routes.logout_jp) ログアウト
            else
                ul
                    li
                        a(href=routes.login_jp) ログイン
                    li
                        a(href=routes.signup_jp) 会員加入
            .user--language
                span
                    i.fas.fa-globe
                span 日本語
                span 
                    i.fas.fa-caret-down
                .language--list
                    ul
                        li
                            a(href="/") English
                        li
                            a(href="/kr") 한국어
                        li
                            a(href="/jp") 日本語
        .header__navi
            .header__logo
                a(href="/jp")
                    img(src="/img/logo.png")
            .navi__list
                ul
                    li
                        a(href=routes.companyJp) COMPANY
                    li
                        a(href="javascript:void(0);") ABOUT
                        ul
                            li
                                a(href=`/about${routes.fitness_jp}`) Fitness
                            li
                                a(href=`/about${routes.game_jp}`) Game
                            li
                                a(href=`/about${routes.character_jp}`) Character
                            li
                                a(href=`/about${routes.connection_jp}`) Connection
                    li
                        a(href=routes.store_jp) STORE
                    li
                        a(href="/notice/1/jp") NOTICE
    .header--narrow
        .header__logo--responsive#js--logoResponsive
            a(href="/jp")
                img(src="/img/logo_responsive.png")
            span.header__icon#js--openSide
                i.fas.fa-bars
        .header__navi--side#js--sideNavi
            .header__logo--side
                .side--navi__header
                    img(src="/img/logo_responsive.png")
                    span.header__icon#js--closeSide
                        i.fas.fa-times
                .side--navi__body
                    if user
                        ul.side-navi__userform
                            li
                                a(href=`/user${routes.user_page_jp}`) プロフィール
                            li
                                a(href=routes.logout_jp) ログアウト
                    else
                        ul.side-navi__userform
                            li
                                a(href=routes.login_jp) ログイン
                            li
                                a(href=routes.signup_jp) 会員加入
                    ul.side--navi__collapsible.js--collapsible
                        li 日本語
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        a(href="/")
                            li
                                span English
                        a(href="/kr")
                            li
                                span 한국어
                        a(href="/jp")
                            li
                                span 日本語
                    ul.side--navi__content
                        a(href=routes.companyJp)
                            li
                                span COMPANY
                    ul.side--navi__collapsible.js--collapsible
                        li ABOUT
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        a(href=`/about${routes.fitness_jp}`)
                            li
                                span Fitness
                        a(href=`/about${routes.game_jp}`)
                            li
                                span Game
                        a(href=`/about${routes.character_jp}`)
                            li
                                span Character
                        a(href=`/about${routes.connection_jp}`)
                            li
                                span Connection
                    ul.side--navi__content
                        a(href=routes.store_jp)
                            li
                                span STORE            
                    ul.side--navi__content
                        a(href="/notice/1/jp")
                            li
                                span NOTICE
