header.header
    .header--wide
        .user--form
            if user
                ul
                    li
                        a(href="#") ログアウト
            else
                ul
                    li
                        a(href="#") ログイン
                    li
                        a(href="#") 会員加入
            .user--language
                span
                    i.fas.fa-globe
                span 日本語
                span 
                    i.fas.fa-caret-down
                .language--list
                    ul
                        li
                            a(href="/") English
                        li
                            a(href="/kr") 한국어
                        li
                            a(href="/jp") 日本語
        .header__navi
            .header__logo
                a(href="/")
                    img(src="/img/logo.png")
            .navi__list
                ul
                    li
                        a(href="#") COMPANY
                    li
                        a(href="#") ABOUT
                        ul
                            li
                                a(href="#") Fitness
                            li
                                a(href="#") Game
                            li
                                a(href=`/about${routes.character_jp}`) Character
                            li
                                a(href=`/about${routes.connection_jp}`) Connection
                    li
                        a(href="#") NOTICE
    .header--narrow
        .header__logo--responsive#js--logoResponsive
            a(href="/")
                img(src="/img/logo_responsive.png")
            span.header__icon#js--openSide
                i.fas.fa-bars
        .header__navi--side#js--sideNavi
            .header__logo--side
                .side--navi__header
                    img(src="/img/logo_responsive.png")
                    span.header__icon#js--closeSide
                        i.fas.fa-times
                .side--navi__body
                    if user
                        ul.side-navi__userform
                            li
                                a(href="#") ログアウト
                    else
                        ul.side-navi__userform
                            li
                                a(href="#") ログイン
                            li
                                a(href="#") 会員加入
                    ul.side--navi__collapsible.js--collapsible
                        li 日本語
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        li
                            a(href="/") English
                        li
                            a(href="/kr") 한국어
                        li
                            a(href="/jp") 日本語
                    ul.side--navi__content
                        li
                            a(href="#") COMPANY
                    ul.side--navi__collapsible.js--collapsible
                        li ABOUT
                        li 
                            span
                                i.fa.fa-caret-down
                    ul.collapsible__content
                        li
                            a(href="/") Fitness
                        li
                            a(href="/kr") Game
                        li
                            a(href=`/about${routes.character_jp}`) Character
                        li
                            a(href=`/about${routes.connection_jp}`) Connection
                    ul.side--navi__content
                        li
                            a(href="#") NOTICE
