        script.
            function initMap(){
                var centerUsa = {lat: 33.939799, lng: -118.080530};
                var mapUsa = new google.maps.Map(document.getElementById('mapUsa'), {
                    zoom: 18,
                    center: centerUsa
                })
                new google.maps.Marker({
                    position: {lat: centerUsa.lat, lng:centerUsa.lng},
                    map: mapUsa,
                    title: "Strong Friends Inc."
                })
                var centerKor = {lat:35.173278, lng:129.130436};
                var mapKor = new google.maps.Map(document.getElementById('mapKor'), {
                    zoom: 15,
