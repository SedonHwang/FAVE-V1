extends layouts/main_jp

block content
    if errorMessage
        .error--message #{errorMessage}
    .main--image
        img(src="/img/company-img.jpg", alt="")
        .main--image__text
            h1
                | P
                span ASSWOR
                | D
    .current--nav
        ul
            li
                i.fas.fa-home
            li Home > Password
    .profile--form
        .form__header
            h2 加入した IDを 書いてください.
        form(action=routes.forgotPassword_jp, method="post")
            .basic-info
                h3 必須情報
                .basic-info__data
                    .basic-info__wrapper
                        .basic-info__label
                            label(for="id")
                                | ID(Email)
                                span *
                        .basic-info__input
                            input(type="email", name="email", id="id")
            .submit-info 
                input.submit--Btn(type="submit", value="OK")