extends layouts/main

block content
    .main--image
        img(src="/img/company-img.jpg", alt="")
        .main--image__text
            h1
                | L
                span ogin
    .current--nav
        ul
            li
                i.fas.fa-home
            li Home > Login
    .login--form
        .form__header
            h3 LOGIN
        form(action="/login", method="post")
            .login-info__data
                .login-info__wrapper
                    .login-info__label
                        label(for="email") Email
                    .login-info__input
                        input(type="email", name="email", id="email", placeholder="Email")
                .login-info__wrapper
                        .login-info__label
                            label(for="password1") Password
                        .login-info__input
                            input(type="password", name="password", id="password1", placeholder="Password")
            .login-info__Btn
                input.login--Btn(type="submit", value="Login")
                ul.login__links
                    li
                        a(href=routes.signup) Are you not a member?
                    li
                        a(href=routes.forgotPassword) lost your password?
                    
